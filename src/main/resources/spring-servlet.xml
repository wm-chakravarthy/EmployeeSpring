<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="employeeRepository" class="com.wavemaker.employee.repository.impl.InMemoryEmployeeRepositoryImpl"/>

    <bean id="employeeService" class="com.wavemaker.employee.service.impl.EmployeeServiceImpl">
        <constructor-arg ref="employeeRepository"/>
    </bean>
</beans>